@model IEnumerable<TSB.Entites.Config>


@{
    ViewBag.Title = "Danh sách";
    Layout = "~/Views/Shared/_LayouAdmin.cshtml";
}

<h2>Danh sách</h2>
<style>
    th {
        border-top: none;
    }
</style>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InfoAbout)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoAbout)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TitleHome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.ActionLink("Chỉnh sửa", "Update", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
