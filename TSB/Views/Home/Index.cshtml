<div id="introl">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 introl-left">
                @foreach (var item in Model.Articles.Where(x => x.Category.TypeShow == TSB.Entites.TyShow.Article).Skip(1).Take(1))
                {
                    <div class="title line">
                        <span>@item.Title</span>
                        <h2>@item.Name</h2>
                    </div>
                    <div class="content">
                        <span>
                            @Html.Raw(item.Content)
                        </span>
                        <div class="ad">
                                <ul>
                                    <li>
                                        <div id="transaction-count" class="number"></div>
                                        <label>Kinh nghiệm</label>
                                    </li>
                                    <li>
                                        <div id="customer-count" class="number"></div>
                                        <label>Nhân viên</label>
                                    </li>
                                    <li>
                                        <div id="city-count" class="number"></div>
                                        <label>Chi nhánh toàn cầu</label>
                                    </li>
                                </ul>
                            </div>

                    </div>
                }

            </div>
            <div class="col-sm-12 col-md-6">
                @foreach (var item in Model.Baners.Where(x => x.Positon == TSB.Entites.GruopBaner.Category))
                {
                    <div class="img-ad">
                        <img src="@item.Image" alt="" />
                    </div>
                }


            </div>
        </div>
    </div>
</div>
<div id="control">
    <div class="container">
        <ul>
            @foreach (var item in Model.Articles.Where(x => x.Category.TypeShow == TSB.Entites.TyShow.Category))
            {
                <li>
                    <div class="icon">
                        <img src="@item.Image" alt="" />
                    </div>
                    <div class="text">
                        <div class="title">
                            <a href="@Url.Action("Details","Home",new { id = item.Id})">@item.Name</a>
                        </div>
                        <div class="content">
                            @item.Sumary
                        </div>
                    </div>
                    @*<div class="arrow-right">
                            <i class="fal fa-chevron-right"></i>
                        </div>*@
                </li>
                @*@for (int i = 0; i < 5; i++)
                    {

                    }*@
            }
        </ul>

    </div>
</div>
