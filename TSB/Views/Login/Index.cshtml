@model TSB.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập quản trị website</title>
</head>
<body>
    <div style="height: 242px; width: 645px; margin: auto; margin-top: 200px; background: url('/Content/Login/bg.gif') no-repeat">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td colspan="2" style="padding-top: 10px; padding-left: 80px">
                        <img src="../../Content/Login/user.gif" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="padding-left: 130px">Để cập nhật website vui lòng nhập username và password đăng nhập.</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationSummary(true)</td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 110px; padding-right: 10px">Tên đăng nhập</td>
                    <td>
                        @Html.TextBoxFor(a => a.UserName, new { @Style = "width:300px" })
                        @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; padding-right: 10px">Mật khẩu</td>
                    <td>
                        @Html.PasswordFor(modelItem => modelItem.Password, new { @Style = "width:300px" })
                        @Html.ValidationMessageFor(modelItem => modelItem.Password,"", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.CheckBoxFor(a => a.RememberMe, new { @Style = "wight:300px" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Đăng nhập" />

                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
