<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/Admin.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800;900&display=swap" rel="stylesheet">

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <h1>Chào mừng đến hệ thống quản trị website</h1>
        <ul id="nav-top">
            <li>
                <a href="">Quản lí bài viết</a>
                <ul>
                    <li>@Html.ActionLink("Thêm thể loại", "Create", "Category")</li>
                    <li>@Html.ActionLink("Danh sách thể loại", "Index", "Category")</li>
                    <li>@Html.ActionLink("Thêm bài viết", "Create", "Article")</li>
                    <li>@Html.ActionLink("Danh sách bài viết", "Index", "Article")</li>
                </ul>
            </li>
            <li>
                <a href="">Quản lí baner</a>
                <ul>
                    <li>@Html.ActionLink("Thêm baner", "Create", "Baner")</li>
                    <li>@Html.ActionLink("Danh sách baner", "Index", "Baner")</li>
                </ul>
            </li>
            <li>
                <a href=""> Contact</a>
                <ul>
                    <li>@Html.ActionLink("Danh sách", "Index", "Contact")</li>
                </ul>
            </li>
            <li>
                <a href="">Quản lí Config</a>
                <ul>
                   
                    <li>@Html.ActionLink("Danh sách config", "Create", "Config")</li>
                    <li>@Html.ActionLink("Danh sách Customer", "Index", "Customer")</li>
                </ul>
            </li>
            <li>
                @Html.ActionLink("Thoát hệ thống", "Logout", "Login")
            </li>
        </ul>

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @RenderSection("scripts", required: false)
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/adapters/jquery.js"></script>
    <script src="~/Scripts/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        $(".ckeditor").ckeditor();
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnSelectImg").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    $("#Article_Image").val(fileUrl);
                    $("#Image").val(fileUrl);
                    $("#ImagePreview").html("<img src='" + fileUrl + "' width='200' />");
                };
                finder.popup();
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnSelectImg2").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    $("#ImageAbout").val(fileUrl);
                    $("#Image").val(fileUrl);
                    $("#ImagePreview2").html("<img src='" + fileUrl + "' width='200' />");
                };
                finder.popup();
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnSelectImgg").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    $("#ImageCategory").val(fileUrl);
                    $("#Image").val(fileUrl);
                    $("#ImagePrevieww").html("<img src='" + fileUrl + "' width='200' />");
                };
                finder.popup();
            });
        });
    </script>
</body>
</html>
